<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoronaMobile.Views.SettingsPage">
    <TableView Intent="Settings">
        <TableRoot>
            <!-- These options are created as an example for settings page. They
            don't function yet. -->
            <TableSection Title="Настройки">
                <SwitchCell Text="Тёмная тема"/>
                <SwitchCell Text="Автоматические обновления"/>
            </TableSection>
            <TableSection Title="О приложении">
                <TextCell Text="Версия" Detail="0.1.0"/>
                <TextCell Text="Лицензия" Detail="ПО распространяется под лицензией Apache 2.0."/>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>